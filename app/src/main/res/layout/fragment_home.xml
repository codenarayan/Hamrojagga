<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


 <LinearLayout
     android:orientation="vertical"
     android:background="@drawable/bg"
     android:weightSum="10"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <RelativeLayout
      android:layout_weight="2"
      android:layout_width="match_parent"
      android:layout_height="0dp">

   <TextView
       android:id="@+id/textGrid"
       android:text="Property Listing"
       android:textSize="34sp"
       android:textColor="@android:color/white"
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

  </RelativeLayout>

  <GridLayout
      android:id="@+id/mainGrid"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="8"
      android:alignmentMode="alignMargins"
      android:columnCount="2"
      android:columnOrderPreserved="false"
      android:padding="14dp"
      android:rowCount="3">

   <!-- Row 1 -->

   <!-- Column 1 -->
   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/bhaktapur" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Land on Sale in Bhaktapur"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>

   <!-- Column 2 -->
   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/kamaladi" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="House on sale at kamaladi"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>


   <!-- Row 2 -->

   <!-- Column 1 -->
   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/kharipati" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Land on sale at Kharipati"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>

   <!-- Column 2 -->
   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/ktm_house" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="House on sale at Kathmandu"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>


   <!-- Row 2 -->

   <!-- Column 1 -->
   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/suryabinayak" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Land on sale at suryabinayak"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>

   <!-- Column 2 -->
   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/thimi" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Land on sale at Thimi"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/tokha" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Land on sale at Tokha"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_rowWeight="1"
       android:layout_columnWeight="1"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/bhaktapurhouse" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Bhaktapur house on Sale"
         android:textAlignment="center"
         android:textColor="@android:color/black"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </android.support.v7.widget.CardView>


  </GridLayout>

 </LinearLayout>

</ScrollView>